<?xml version="1.0" encoding="utf-8"?>

<cz.ondrejpittl.semestralka.layout.PinCodeFields
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pinCodeFieldsWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    >

    <!-- autofocus fix -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/edTxt_pin1"
                android:layout_weight="2"
                android:maxLength="1"
                android:background="@drawable/pin_code_input_style"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/edTxt_pin2"
                android:layout_weight="2"
                android:maxLength="1"
                android:background="@drawable/pin_code_input_style"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/edTxt_pin3"
                android:layout_weight="2"
                android:maxLength="1"
                android:background="@drawable/pin_code_input_style"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/edTxt_pin4"
                android:layout_weight="2"
                android:maxLength="1"
                android:background="@drawable/pin_code_input_style"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <!--<View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/welcomeUpperControlWrapper"
            android:layout_marginTop="7dp"
            android:background="@android:color/white"/>-->
    </LinearLayout>


    <ImageButton
        android:id="@+id/pinClearBtn"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/erase"></ImageButton>




</cz.ondrejpittl.semestralka.layout.PinCodeFields>
