                            android:text="USD"
                            android:textSize="9sp"
                            android:textColor="@color/appPaymentRecordLabels"
                            android:shadowColor="@color/appPaymentRecordLabelShadow"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:layout_gravity="center_vertical|bottom" />
                    </LinearLayout>
                    -->

                </FrameLayout>
            </LinearLayout>

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/welcomeUpperControlWrapper"
                android:background="@color/appWhite50"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/recordNoteHolder"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="note1 note2 note3 note4 note5 note6 note7 note8 note9 note10 note11 note12 note13 note14"
                    android:id="@+id/txtViewRecordNote"
                    android:layout_gravity="center"
                    android:textColor="@color/appPaymentRecordLabels"
                    android:shadowColor="@color/appPaymentRecordLabelShadow"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:textSize="10sp"
                    android:textAlignment="center"


                    android:singleLine="true" />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/appPaymentDeleteAction"
            android:id="@+id/recordDeleteWrapper"
            android:layout_weight="0">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:padding="11dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:background="@color/appError"
                android:scaleType="fitCenter"
                android:src="@drawable/trash"
                android:textColor="#FFFFFF"
                android:id="@+id/btnRecordDelete"></ImageButton>

        </FrameLayout>

    </LinearLayout>

</cz.ondrejpittl.semestralka.layout.PaymentRecord>
