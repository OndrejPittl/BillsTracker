<?xml version="1.0" encoding="utf-8"?>

<cz.ondrejpittl.semestralka.layout.PaymentRecord
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <!--android:background="@color/appWhite25"-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/appPaymentEditAction"
            android:id="@+id/recordEditWrapper"
            android:layout_weight="0">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:padding="11dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:background="@color/appPaymentEditAction"
                android:scaleType="fitCenter"
                android:src="@drawable/pencil"
                android:textColor="#FFFFFF"
                android:id="@+id/btnRecordEdit"></ImageButton>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/recordMainWrapper"
            android:layout_weight="1"
            android:background="@color/appWhite25">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="4dp"
                android:id="@+id/recordControlsHolder">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/recordImgHolder"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgViewRecordIcon"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/recordDayHolder"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/txtViewRecordDay"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/appPaymentRecordLabels"
                        android:shadowColor="@color/appPaymentRecordLabelShadow"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textSize="13sp"
                        android:textAlignment="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/recordCategoryHolder"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="category"
                        android:id="@+id/txtViewRecordCategory"
                        android:layout_gravity="center"
                        android:textColor="@color/appPaymentRecordLabels"
                        android:shadowColor="@color/appPaymentRecordLabelShadow"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:singleLine="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/recordStoreHolder"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="store"
                        android:id="@+id/txtViewRecordStore"
                        android:layout_gravity="center"
                        android:textColor="@color/appPaymentRecordLabels"
                        android:shadowColor="@color/appPaymentRecordLabelShadow"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:singleLine="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/recordPriceHolder"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/price_mock"
                        android:id="@+id/txtViewRecordPrice"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/appPaymentRecordLabels"
                        android:shadowColor="@color/appPaymentRecordLabelShadow"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textAlignment="center"/>


                    <!--
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/price_mock"
                            android:id="@+id/txtViewRecordPrice"
                            android:layout_gravity="center|bottom"
                            android:textIsSelectable="true"
                            android:textSize="13sp"
                            android:textColor="@color/appPaymentRecordLabels"
                            android:shadowColor="@color/appPaymentRecordLabelShadow"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:textAlignment="textEnd"
                            android:layout_weight="9"
                            android:paddingRight="5dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/txtViewRecordCurrency"
