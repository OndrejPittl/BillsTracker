<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/appWhite25">


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/recordImgHolder"
        android:padding="3dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imgViewRecordIcon"
            android:background="#fff"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/recordDayHolder"
        android:padding="3dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtViewRecordDay"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="@color/appTextGold"
            android:shadowColor="@color/appTextGreen"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textSize="13sp"
            android:textAlignment="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/recordCategoryHolder"
        android:padding="3dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="category"
            android:id="@+id/txtViewRecordCategory"
            android:layout_gravity="center"
            android:textColor="@color/appTextGold"
            android:shadowColor="@color/appTextGreen"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textSize="12sp"
            android:textAlignment="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/recordNoteHolder"
        android:padding="3dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="note note note note note note note note note note "
            android:id="@+id/txtViewRecordNote"
            android:layout_gravity="center"
            android:textColor="@color/appTextGold"
            android:shadowColor="@color/appTextGreen"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textSize="12sp"
            android:textAlignment="center"


            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/recordPriceHolder"
        android:padding="3dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/price_mock"
            android:id="@+id/txtViewRecordPrice"
            android:layout_gravity="center"
            android:textIsSelectable="true"
            android:textSize="13sp"
            android:textColor="@color/appTextGold"
            android:shadowColor="@color/appTextGreen"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAlignment="center" />
    </FrameLayout>

</LinearLayout>
